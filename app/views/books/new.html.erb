<% if @book.errors.any? %>
<div class="alert alert-danger" role="alert">
    <% @book.errors.full_messages.each do |msg| %>
    <%= msg %><br>
    <% end %>
</div>
<% end %>
<div class="well">

    <%= form_for @book do |f| %>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title,class: "form-control" %><br>
    </div>
    <div class="form-group">
        <%= f.label :isbn %>
        <%= f.text_field :isbn,class: "form-control" %><br>
    </div>

    <div class="form-group">
        <%= f.label :author %>
        <%= f.text_field :author,class: "form-control" %><br>
    </div>

    <div class="form-group">
        <%= f.label :year %>
        <%= f.text_field :year,class: "form-control" %><br>
    </div>

    <div class="form-group">
        <%= f.label :availibility %>
        <%= f.text_field :availibility,class: "form-control" %><br>
    </div>

    <div class="form-group">
        <%= f.label :pub_id, 'Publisher' %>
        <%= f.collection_select :pub_id, Publisher.all, :id, :pub_name, {prompt: true},class: "form-control" %><br>
    </div>

    <div class="form-group">

        <%= f.submit class: "btn btn-lg btn-primary" %>
    </div>

    <% end %>
</div>
